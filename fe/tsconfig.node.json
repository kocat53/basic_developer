{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*"
  ],
  "compilerOptions": {
    "composite": true, // 프로젝트가 다른 프로젝트랑 결합될 수 있도록 처리
    "noEmit": true, // 컴파일 된 결과물 생성 X
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo", // 빌드정보파일 위치 저장
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"]
  }
}
